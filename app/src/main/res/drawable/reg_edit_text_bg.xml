<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape>
            <stroke android:color="@color/appBlue" android:width="1.5dp" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_window_focused="false">
        <shape>
            <stroke android:color="@color/appGrey" android:width="3dp"/>
            <corners android:radius="4dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>