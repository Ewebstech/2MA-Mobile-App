<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/sign_in_bg"
    >

    <ImageView
        android:id="@+id/backBtnFP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_blue_24dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:padding="@dimen/_5sdp"
        android:layout_weight="0.2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="@dimen/_25ssp"
            android:textColor="#070707"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Email Address to rest Password"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:textColor="#444444"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailFPTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_edit_text_bg"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/emailFPEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Enter Email Address"
                android:paddingBottom="@dimen/_4sdp"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="@color/appBlue"
                android:textSize="@dimen/_14ssp"
                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/forgotPasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/reg_btn"
            android:text="Reset Password"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>