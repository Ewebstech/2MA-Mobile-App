<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.Registration">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
    android:id="@+id/backBtnKYC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow_back_blue_24dp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:layout_gravity="start"
    />

    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/updatedmalogo"
        android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="@color/appGrey"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Signup"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/appBlue"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* We ensure absolute security for all patients medical Information"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please ensure you provide accurate details"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="@color/appGrey"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname *"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <EditText
            android:id="@+id/first_name_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/reg_edit_text_bg"
            android:hint="Enter First Name"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <EditText
            android:id="@+id/last_name_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/reg_edit_text_bg"
            android:hint="Enter Last Name"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:inputType="text"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bgg"
            android:entries="@array/gender_arrays"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <EditText
            android:id="@+id/phone_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/reg_edit_text_bg"
            android:hint="Enter Phone"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User type *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <Spinner
            android:id="@+id/user_spinner_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bgg"
            android:entries="@array/user_array"
            android:maxLines="1"
            android:padding="@dimen/_8sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <EditText
            android:id="@+id/email_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/reg_edit_text_bg"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Password *"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_tl_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/reg_edit_text_bg"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
        >

        <EditText
        android:id="@+id/password_et_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:singleLine="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@null"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/black"
        />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/regBtn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/reg_btn"
            android:textColor="@color/white"
            android:text="SignUp Now"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_8sdp"
            />

    </LinearLayout>
</ScrollView>
